    <color rgba='1 1 1 0.5'/>
  </material>
  
  <material name='blue'>
    <color rgba='0 1 0 0.5'/>
  </material>

  <link name="base_link">
    <visual>
      <geometry>
        <box size="1.2 1.2 0.3"/>
      </geometry>
      <material name='white'/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="1.2 1.2 0.3"/>
      </geometry>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <mass value ='40'/>
      <inertia ixx='5.1' ixy='0.0' ixz='0.0' iyy='5.1' iyz ='0.0' izz='9.6'/>
    </inertial>
  </link>
  
  <link name='block_fl'>
    <visual>
