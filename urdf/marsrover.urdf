    </inertial>
  </link>

  <joint name='base_to_flblock' type='continuous'>
    <parent link='base_link'/>
    <child link='block_fl'/>
    <axis xyz='0 0 1'/>
    <origin rpy="0 0 0" xyz='0.535 0.495 -0.2'/>
    <dynamics damping='0.5'/>
  </joint>

  <link name="front_left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.13" radius='0.105'/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.13" radius='0.105'/>
      </geometry>
    </collision>
    <inertial>
      <mass value='2'/>
      <inertia ixx='0.02718' ixy='0.0' ixz='0.0' iyy='0.02718' iyz='0.0' izz='0.011025'/>
    </inertial>
  </link>

